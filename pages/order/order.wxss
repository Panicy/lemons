/* pages/order/order.wxss */

.orderItem{
  background: white;

}
.orderItemOrderNumber{
  position: relative;
  margin-top: 20rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #E7E7E7;

}
.orderItemOrderNumberRight{
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}


.orderItemOrderNumber text{
  display: inline-block;
  font-size: 23rpx;
  margin: 10rpx ;

}
.orderItemOrderDetails{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #E7E7E7;
}
.orderItemOrderDetails image{
  height: 160rpx;
  width: 160rpx;
}
.orderItemOrderDetailsText{
  font-size: 23rpx;
  line-height: 60rpx;
}

.orderItemOrdertotle{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding: 20rpx 10rpx;
  font-size: 23rpx;
}
.orderItemOrdertotleBtn{
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 22rpx;
  text-align: center;
  background: #4DAE51;
  margin-top: 10rpx;
  border-radius: 5rpx;
  color: white;
}
.orderItemOrdertotleprice{
  font-weight: 600
}