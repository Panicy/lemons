/* pages/cart/cart.wxss */
.cartItem{
  position: relative;
  height: 200rpx;
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.removeview{
  position: absolute;
  top: 25rpx;
  right: 20rpx;
  font-size: 22rpx;
  background: #D84C29;
  padding: 10rpx 15rpx;
  border-radius: 5rpx;
  color: white;
}
.cartItemIcon{
  width: 100rpx;
  text-align: center
}
.cartItemImg{
  width: 200rpx;
}
.cartItemImg image{
  width:160rpx;
  height: 160rpx;
  margin: 20rpx;
}
.cartItemDetailsview{
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
}
.cartItemDetailstitel{
  font-size: 24rpx;
  font-weight: 600;
}
.cartItemDetailsnes{
  font-size: 22rpx;

}
.cartItemDetailstBtn{

}
.cartItemDetailstBtnview{
  
  display: flex;
  flex-direction: row;
  align-items: center;
}
.cartItemDetailstBtnPrice{
  font-size: 26rpx;
  line-height: 60rpx;
}
.cartItemDetailstBtnForm{
position: absolute;
  right: 20rpx;
  top: 125rpx;
  
}
  /* align-items: center; */
.cartItemDetailstBtnFormview{
  text-align: center;
  display: flex;
  flex-direction: row;
  border: 1rpx solid #d8d8d8;
  justify-content: space-between;

}
.cartItemDetailstBtnFormview text{
  width:50rpx;
  height: 50rpx;
}

.cartItemDetailstBtnFormview input{
  width: 50rpx;
  height: 50rpx;
  font-size: 23rpx;
  line-height: 50rpx;
}

/* 底部 */
.BtnviewDemo{
  position: fixed;
  bottom:0;
  width: 100%;
  height: 120rpx;
  background: white;
  overflow: hidden;
}
.btncartprice{
  padding: 0 30rpx;
  float: left;
  line-height: 120rpx;
  font-weight: 900
}
.btncartbtn{
  float: right;
  padding: 0 20rpx
}
.btncartbtn button{
  text-align: center;
  width: 160rpx;
  height: 70rpx;
  font-size: 26rpx;
  line-height: 70rpx;
  margin: 25rpx auto;
  font-weight: 400
}
.hoverBtn{
  background: red !important;
}
